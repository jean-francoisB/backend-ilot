{% extends 'base-backend.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_sortie_index') }}" class="btn btn-dark mb-4">Retour</a>
    <h1>Sortie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sortie.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ sortie.imageName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sortie.nom }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ sortie.texte|raw }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ sortie.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Mise Ã  jour</th>
                <td>{{ sortie.updatedAt ? sortie.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex flex-wrap justify-content-between align-items-center">
        {{ include('admin_sortie/_delete_form.html.twig') }}

        <a href="{{ path('app_admin_sortie_edit', {'id': sortie.id}) }}"class="btn btn-dark"><i class="align-middle" data-feather="eye"></i></a>
    </div>
{% endblock %}
