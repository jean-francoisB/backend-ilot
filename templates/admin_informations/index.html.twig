{% extends 'base-backend.html.twig' %}

{% block title %}Informations index{% endblock %}

{% block body %}
    <div class="d-flex flex-wrap justify-content-between align-items-center">
        <h1 class="d-inline-block">Informations index</h1>
        <a href="{{ path('app_admin_informations_new') }}" class="btn btn-success">Nouveau</a>
    </div>
    
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Texte</th>
                <th>Actif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for information in informations %}
            <tr>
                <td>{{ information.id }}</td>
                <td>{{ information.nom }}</td>
                <td>{{ information.texte }}</td>
                <td>{{ information.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_admin_informations_show', {'id': information.id}) }}"class="btn btn-dark"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_informations_edit', {'id': information.id}) }}"class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'information dans la BDD</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
