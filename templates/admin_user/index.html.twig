{% extends 'base-backend.html.twig' %}

{% block title %}Utilisateurs index{% endblock %}

{% block body %}
<div class="d-flex flex-wrap justify-content-between align-items-center">
    <h1 class="d-inline-block">Utilisateurs index</h1>
    <a href="{{ path('app_admin_user_new') }}" class="btn btn-success">Nouveau</a>
</div>
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Roles</th>
                <th>Email</th>
                {# <th>Password</th> #}
                {# <th>Adresse</th> #}
                {# <th>CodePostal</th> #}
                <th>Ville</th>
                <th>Telephone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                {# <td>{{ user.password }}</td> #}
                {# <td>{{ user.adresse }}</td> #}
                {# <td>{{ user.codePostal }}</td> #}
                <td>{{ user.ville }}</td>
                <td>{{ user.telephone }}</td>
                <td>
                    <a href="{{ path('app_admin_user_show', {'id': user.id}) }}" class="btn btn-dark"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas d'utilisateurs dans la BDD</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
