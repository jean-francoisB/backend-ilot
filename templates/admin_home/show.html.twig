{% extends 'base-backend.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_home_index') }}" class="btn btn-dark mb-4">Retour</a>
    <h1>Accueil</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ home.id }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td><i class="align-middle text-{{ home.isActive ? 'success' : 'danger' }}" data-feather="{{ home.isActive ? 'check' : 'x' }}"></i></td>

            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ home.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ home.texte|raw }}</td>
            </tr>
            <tr>
                <th>Signature</th>
                <td>{{ home.signature }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                {% if home.imageName is not null %}
                <a href="{{asset('images/home/' ~ home.imageName)}}" data-lightbox="image">
                    <img src="{{asset('images/home/' ~ home.imageName)}}" alt="" class="img-fluid">
                </a>
                {% endif %}

                </td>
            </tr>         
                        
            <tr>
                <th>Mise Ã  jour</th>
                <td>{{ home.updatedAt ? home.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            
        </tbody>
    </table>



    <div class="d-flex flex-wrap justify-content-between align-items-center">
        {{ include('admin_home/_delete_form.html.twig') }}
        <a href="{{ path('app_admin_home_edit', {'id': home.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
    </div>
{% endblock %}
