{{ form_start(form) }}
    {# {{ form_widget(form) }} #}
    {% if carousel.imageName is not null %}
        <div class="col-12 col-md-3">
            <a href="{{ asset('images/carousel/' ~ carousel.imageName)}}" data-lightbox="image">
            <img src="{{ asset('images/Carousel/' ~ carousel.imageName)}}" class="img-fluid">
            </a>
        </div>
    {% endif  %}
    <div class="d-flex flex-wrap">
        <div class="col-12 col-md-6 pe-2">
            {{ form_row(form.imageFile) }}
        </div>
        <div class="col-12 col-md-6 ps-2">
            <div class="text-danger">{{ form_label(form.tag) }}</div>
            {{ form_widget(form.tag) }}
            {{ form_help(form.tag ) }}
            {{ form_errors(form.tag ) }}
        </div>
    </div>
    {{ form_row(form.titre) }}
    {{ form_row(form.texte) }}
    {{include("common/_required_message.html.twig")}} 
    <button class="btn btn-success">{{ button_label|default('Sauvegarder') }}</button>
{{ form_end(form) }}