{% extends 'base-backend.html.twig' %}

{% block title %}Caroussel{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_carousel_index') }}" class="btn btn-dark mb-4">Retour </a>
    <h1>Caroussel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carousel.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                <a href="{{ asset('images/Carousel/' ~ carousel.imageName) }}" data-lightbox="image">
                    <img src="{{ asset('images/Carousel/' ~ carousel.imageName) }}" alt="" class="img-fluid">
                </a>
                </td>
            </tr>
            <tr>
                <th>Mise Ã  jour</th>
                <td>{{ carousel.updatedAt ? carousel.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ carousel.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ carousel.texte|raw }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ carousel.tag }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex flex-wrap justify-content-between align-items-center">
        {{ include('admin_carousel/_delete_form.html.twig') }}
        <a href="{{ path('app_admin_carousel_edit', {'id': carousel.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
    </div>
{% endblock %}
