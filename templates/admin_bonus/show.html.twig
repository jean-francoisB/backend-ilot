{% extends 'base-backend.html.twig' %}

{% block title %}Bonus{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_bonus_index') }}" class="btn btn-dark mb-4">Retour</a>
    <h1>Bonus</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bonu.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <a href="{{asset('images/bonus/' ~ bonus.imageName)}}" data-lightbox="image {{loop.index}}">
                    <img src="{{asset('images/bonus/' ~ bonus.imageName)}}" class="img-admin-list">
                </td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ bonu.nom }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ bonu.texte|raw }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ bonu.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Mise Ã  jour</th>
                <td>{{ bonu.updatedAt ? bonu.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex flex-wrap justify-content-between align-items-center">
        {{ include('admin_bonus/_delete_form.html.twig') }}
        <a href="{{ path('app_admin_bonus_edit', {'id': bonu.id}) }}"class="btn btn-dark"><i class="align-middle" data-feather="eye"></i> </a>
    </div>


{% endblock %}
