{% extends 'base-backend.html.twig' %}

{% block title %}Festivité index{% endblock %}

{% block body %}
<div class="d-flex flex-wrap justify-content-between align-items-center">
    <h1>Festivité index</h1>
    <a href="{{ path('app_admin_festivite_new') }}" class="btn btn-success">Nouveau</a>

</div>
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Nom</th>
                {# <th>Texte</th> #}
                <th>Actif</th>
                <th>Mise à jour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for festivite in festivites %}
            <tr>
                <td>{{ festivite.id }}</td>
                <td>
                    <a href="{{asset('images/festivite/' ~ festivite.imageName)}}" data-lightbox="image {{loop.index}}">
                    <img src="{{asset('images/festivite/' ~ festivite.imageName)}}" class="img-admin-list">

                </td>
                <td>{{ festivite.nom }}</td>
                {# <td>{{ festivite.texte }}</td> #}
                <td>{{ festivite.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ festivite.updatedAt ? festivite.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_festivite_show', {'id': festivite.id}) }}"class="btn btn-dark"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_festivite_edit', {'id': festivite.id}) }}"class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de festivité dans le BDD</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
